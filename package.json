{
  "name": "cgpts-telegram-whatsapp-bot",
  "version": "1.0.0",
  "description": "Telegram bot that connects to WhatsApp Web for ride sharing management",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "nodemon --exec ts-node src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "telegram",
